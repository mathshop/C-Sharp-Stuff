@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Edit Student</h3>
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(m => m.Student.StudentId)
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Edit Personal Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control", placeholder = "FirstName"})
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control", placeholder = "LastName" })
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control", placeholder = "MajorId" })
                                    </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control", placeholder = "GPA" })
                                    </div>
                                    <h4>Courses</h4>
                                    <div class="form-group">
                                        @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control", placeholder = "CourseId" })
                                    </div>

                                    <div class="form-group">
                                        <label>Street1 Name:</label>
                                        <label>Address:</label>
                                        @Html.TextBoxFor(m=>m.Student.Address.Street1, new { @class = "form-control", placeholder = "Street1" })
                                    </div>
                                    <div class="form-group">
                                        <label>Street2 Name:</label>
                                        @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control", placeholder = "Street2" })
                                    </div>                                
                                    <div class="form-group">
                                        <label>City Name:</label>
                                        @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control", placeholder = "City" })
                                    </div>
                                    <div class="form-group">
                                        <label>State name:</label>
                                        @Html.TextBoxFor(m => m.Student.Address.State.StateName, new { @class = "form-control", placeholder = "State" })
                                    </div>
                                    <button class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

